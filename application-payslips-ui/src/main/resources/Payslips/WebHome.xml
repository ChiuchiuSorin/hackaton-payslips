  <hidden>true</hidden>
  <content>{{velocity output="false"}}
#attachmentPicker_import
{{/velocity}}

{{velocity}}
#set ($payslipAttachment = $request.payslipAttachment)
#if ($payslipAttachment &amp;&amp; $payslipAttachment != '')
  #try()
    $services.payslips.generatePayslips($payslipAttachment, $request.payslipDate)
    $response.sendRedirect($doc.getURL('view', 'operation=success'))
  #end
  #if ("$!exception" != '')
    {{html}}
      #displayException('An error occured while processing the payslips', $exception)
      &lt;a href="$doc.getURL('view')" class='button buttonwrapper'&gt;Return&lt;/a&gt;
    {{/html}}
  #end
#else
{{html}}
  #if ($request.operation == 'success')
      #info('Payslip successfully processed!')
  #end
  &lt;form class="xform" method="get" action="$doc.getURL('view')"&gt;
    &lt;dl&gt;
      &lt;dt&gt;
        &lt;label for="payslip-attachment"&gt;Payslip&lt;/label&gt;
      &lt;/dt&gt;
      &lt;dd&gt;&lt;input type='text' data-upload-allowed='true' data-accept='.xlsx' name='payslipAttachment' id='payslip-attachment' placeholder='Select payslip...' class='suggest-attachments'/&gt;&lt;/dd&gt;
      &lt;dt&gt;
        &lt;label for="payslip-date"&gt;Payslip date&lt;/label&gt;
      &lt;/dt&gt;
      &lt;dd&gt;&lt;input type="text" id="payslipDate" name="payslipDate" placeholder="Date in format LLLL yyyy (ex: Iulie 2025)"&gt;&lt;/dd&gt;
    &lt;/dl&gt;
    &lt;input type='submit' class='button buttonwrapper' value='Submit'&gt;
  &lt;/form&gt;
{{/html}}
#end
{{/velocity}}

